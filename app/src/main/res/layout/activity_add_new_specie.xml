<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal"
    tools:context=".ui.AddNewSpecie.AddNewSpecieActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/ic_close_green_24dp" />

    <com.pratham.biodiversity.custom.ViewPagerCustomDuration
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"/>

    <com.pratham.biodiversity.custom.StepperIndicator
        android:id="@+id/stepper_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@id/iv_close"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_30sdp">

        <TextView
            android:id="@+id/tv_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_60sdp"
            android:layout_marginEnd="@dimen/_60sdp"
            android:background="@drawable/roundbuttonlightgray"
            android:drawableRight="@drawable/ic_arrow_back_black_48dp"
            android:gravity="center|center_horizontal"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbutton"
            android:drawableRight="@drawable/ic_arrow_forward_white_48dp"
            android:gravity="center|center_horizontal"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="@dimen/_230sdp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    app:headerLayout="@null"
    app:menu="@null">

    <RelativeLayout
        android:id="@+id/rl_drawer_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_20sdp"
        android:background="@color/colorPrimaryDark">

        <androidx.cardview.widget.CardView
            android:id="@+id/drawer_profile_card"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_50sdp">

            <ImageView
                android:id="@+id/drawer_profile_lottie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/specieone"
                android:layout_gravity="center_horizontal"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/drawer_profile_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_below="@+id/drawer_profile_card"
            android:elevation="@dimen/_5sdp"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Name"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/menu_explore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_drawer_profile"
        android:text="Explore"
        android:textSize="@dimen/_15sdp"
        android:drawableStart="@drawable/ic_explore_grey_24dp"
        android:drawableLeft="@drawable/ic_explore_grey_24dp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:drawablePadding="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/menu_leafdisease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_explore"
        android:text="Leaf Disease"
        android:textSize="@dimen/_15sdp"
        android:drawableStart="@drawable/leaf_icon_grey"
        android:drawableLeft="@drawable/leaf_icon_grey"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:drawablePadding="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"/>

    <TextView
        android:id="@+id/menu_sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_leafdisease"
        android:text="Sync"
        android:textSize="@dimen/_15sdp"
        android:drawableStart="@drawable/ic_sync_grey_24dp"
        android:drawableLeft="@drawable/ic_sync_grey_24dp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:drawablePadding="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"/>

    <TextView
        android:id="@+id/menu_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_sync"
        android:text="Map"
        android:textSize="@dimen/_15sdp"
        android:drawableStart="@drawable/ic_map_grey_24dp"
        android:drawableLeft="@drawable/ic_map_grey_24dp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:drawablePadding="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"/>

    <TextView
        android:id="@+id/menu_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_map"
        android:text="Help"
        android:textSize="@dimen/_15sdp"
        android:drawableStart="@drawable/ic_help_grey_24dp"
        android:drawableLeft="@drawable/ic_help_grey_24dp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:drawablePadding="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"/>

<!--    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_drawer_profile"
        android:layout_margin="@dimen/_5sdp" />-->
</RelativeLayout>
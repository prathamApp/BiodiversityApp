<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddNewSpecie.Fragment_QuestionOne"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/tv_plantORanim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Plant  or  Animal?"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/tv_selectedOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_plantORanim"
            android:gravity="center"
            android:text="Plant"
            android:visibility="gone"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:id="@+id/ll_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_selectedOption"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPlant"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv_plant"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/leaf_green" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAnim"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_15sdp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/iv_animal"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/animalclaw"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!--
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_50sdp">
                <TextView
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundbutton"
                    android:drawableRight="@drawable/ic_arrow_forward_white_24dp"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center_horizontal|center"/>
                </LinearLayout>
        -->

    </RelativeLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment_leafdisease.Fragment_LeafDisease"
    android:background="@color/white"
    android:clickable="true">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_green_24dp"
        android:layout_margin="@dimen/_15sdp"/>
    <ImageView
        android:id="@+id/iv_leafphoto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:src="@drawable/camera"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"/>

    <TextView
        android:id="@+id/tv_addDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Details"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:layout_margin="@dimen/_15sdp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/iv_leafphoto"/>

    <EditText
        android:id="@+id/et_leafName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Leaf Name"
        android:layout_below="@id/tv_addDetail"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:background="@drawable/roundblackborder"/>

    <EditText
        android:id="@+id/et_leafType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter leaf Type"
        android:layout_below="@id/et_leafName"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:background="@drawable/roundblackborder"/>

    <RadioGroup
        android:layout_below="@id/et_leafType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leaf Health :"/>


        <RadioButton
            android:id="@+id/radioHealthy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Healthy"
            android:checked="false"/>

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Unhealthy"
            android:checked="false"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/white"
        android:background="@drawable/roundbuttonlightgreen"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>